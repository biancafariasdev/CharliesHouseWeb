@model UserModel
<style>
    .divmenu {
        margin-left: 85%;
        margin-top: 1%;
        position: absolute;
        color: black;
    }

    .user-dropdown {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .user-dropdown img {
            width: 23%;
            margin-right: 1em; 
        }

        .user-dropdown a {
            margin-top: 42%;
            margin-left: 50%;
        }

    .btn-default:focus,
    .btn-default:active {
        outline: none;
        box-shadow: none;
    }
</style>

<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times</a>
    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    <a asp-area="" asp-controller="Client" asp-action="Index">Clientes</a>
    @if (Model.Perfil == CharliesHouseWeb.Enums.PerfilEnum.Admin)
    {
        <a asp-area="" asp-controller="User" asp-action="Index">Usuários</a>
    }
    <a asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a>
    <a asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
</div>

<div id="main">
    <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; Menu</span>
</div>
<br />

<div id="Menu" class="divmenu" style="margin-left:80%;margin-top: -5%;position:absolute; color:black">
    <div class="dropdown" style="position: fixed; top: 0; right: -6%;">
        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown" style="width: 20%;margin-left: 34%;">
            <img src="~/img/user.png" class="img-fluid" alt="Charlie's House'" style="margin-right: 10px; width: 63%;" />
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@Model.Nome </a>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-left" role="menu" aria-labelledby="menu1" style="top: 100%; left: 40%;">
            <li role="presentation"><a role="menuitem" tabindex="-1" class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a></li>
        </ul>
    </div>
</div>

